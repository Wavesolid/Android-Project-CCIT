<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B388FF"
    tools:context=".AddPage">

    <Spinner
        android:id="@+id/spinnerStatusDaftar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:entries="@array/statusSpinner"
        app:layout_constraintEnd_toStartOf="@id/spinnerAgamaDaftar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStatusDaftar" />

    <TextView
        android:id="@+id/textViewDaftar"
        android:layout_width="135dp"
        android:layout_height="25dp"
        android:layout_marginTop="67dp"
        android:background="#B388FF"
        android:capitalize="characters"
        android:gravity="center"
        android:text="Formulir Pendaftaran"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="177dp"
        android:background="#B388FF"
        android:text="NAMA"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/textViewKelamin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDaftar"
        android:layout_marginRight="177dp" />

    <EditText
        android:id="@+id/inputNama"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="NAMA"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@id/textViewTmptLahir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNama"
        android:layout_marginLeft="28dp" />

    <EditText
        android:id="@+id/inputTglLahir"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="TANGGAL"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTglDaftar" />

    <TextView
        android:id="@+id/textViewTglDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="114dp"
        android:background="#B388FF"
        android:text="TANGGAL LAHIR"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@id/textViewTmptLahir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputNama" />

    <TextView
        android:id="@+id/textViewTmptLahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="67dp"
        android:background="#B388FF"
        android:text="TEMPAT LAHIR"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textViewDaftar"
        app:layout_constraintTop_toBottomOf="@id/radioGroupDaftar" />

    <EditText
        android:id="@+id/inputTmptLahir"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="TEMPAT"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/inputTglLahir"
        app:layout_constraintTop_toBottomOf="@id/textViewTmptLahir" />

    <Spinner
        android:id="@+id/spinnerAgamaDaftar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:entries="@array/agamaSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inputTglLahir"
        app:layout_constraintTop_toBottomOf="@id/textView9"
        android:layout_marginRight="32dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:background="#B388FF"
        android:text="AGAMA"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inputNama"
        app:layout_constraintTop_toBottomOf="@id/inputTmptLahir" />

    <TextView
        android:id="@+id/textViewKelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:background="#B388FF"
        android:text="KELAMIN"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/inputNama"
        app:layout_constraintTop_toBottomOf="@id/textViewDaftar" />

    <TextView
        android:id="@+id/textViewStatusDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="171dp"
        android:layout_marginRight="171dp"
        android:background="#B388FF"
        android:text="STATUS"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputTglLahir" />

    <Button
        android:id="@+id/buttonDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="160dp"
        android:text="DAFTAR"
        app:backgroundTint="#8BC34A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDaftar" />

    <Button
        android:id="@+id/buttonKembaliDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="282dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="30dp"
        android:text="KEMBALI"
        app:backgroundTint="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerAgamaDaftar"
        android:layout_marginLeft="282dp"
        android:layout_marginRight="30dp" />



    <Button
        android:id="@+id/buttonTglDaftar"
        android:layout_width="107dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="113dp"
        android:layout_marginRight="113dp"
        android:gravity="center"
        android:text="Tanggal"
        android:textAllCaps="true"
        android:textSize="12sp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintEnd_toStartOf="@id/inputTmptLahir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputTglLahir" />

    <RadioGroup
        android:id="@+id/radioGroupDaftar"
        android:layout_width="158dp"
        android:layout_height="61dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="36dp"
        android:foregroundGravity="left"
        android:gravity="left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/inputNama"
        app:layout_constraintTop_toBottomOf="@id/textViewKelamin">

        <RadioButton
            android:id="@+id/radioButtonLakiDaftar"
            android:layout_width="119dp"
            android:layout_height="19dp"
            android:layout_gravity="right"
            android:layout_marginStart="73dp"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:background="#FFFFFF"
            android:foregroundGravity="center"
            android:text="Laki-laki"
            android:textSize="12sp"
            android:verticalScrollbarPosition="left" />

        <RadioButton
            android:id="@+id/radioButtonPerempuanDaftar"
            android:layout_width="118dp"
            android:layout_height="19dp"
            android:layout_gravity="center|right"
            android:layout_marginStart="73dp"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="31dp"
            android:background="#FFFFFF"
            android:foregroundGravity="center"
            android:text="@string/perempuan"
            android:textSize="12sp" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>