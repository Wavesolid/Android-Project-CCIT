<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardPage">

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="-74dp"
    tools:layout_editor_absoluteY="-52dp">

    <Button
        android:id="@+id/editDataButton"
        android:layout_width="206dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:text="Edit data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tambahDataButton" />

    <Button
        android:id="@+id/tambahDataButton"
        android:layout_width="206dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:text="Tambah Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daftarmenutext" />

    <Button
        android:id="@+id/hapusDataButton"
        android:layout_width="206dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:text="Hapus data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lihatDataButton" />

    <Button
        android:id="@+id/lihatDataButton"
        android:layout_width="206dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:text="lihat data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDataButton" />

    <EditText
        android:id="@+id/daftarmenutext"
        android:layout_width="134dp"
        android:layout_height="42dp"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Daftar Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="270dp"
        android:text="Log out"
        app:backgroundTint="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hapusDataButton" />


</androidx.constraintlayout.widget.ConstraintLayout>